<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    <link rel="stylesheet" href="/css/post-request.css">
    <title>user page</title>
  </head>

  <body>
    <%= form_for(@review_request, html: {class: "post-request"}) do |f| %>
      <% if @review_request.errors.any? %>
        <div class="error-list">
          <p class="error-list__head">Error</p>
          <% @review_request.errors.full_messages.each do |message| %>
          <li class="error-list__message">
            <%= message %>
          </li>
          <% end %>
        </div>
      <% end %>

      <%= f.text_field :title,
        class: "post-request__interface post-request__interface_input-title" %>

      <%= f.submit "リクエスト",
        class: "post-request__interface post-request__interface_submit" %>

      <div class="post-request post-request__interface_text">タグを半角スペース区切りで入力
        <input id="tags" name="tags" type="text" class="post-request__interface post-request__interface_input-tags">
      </div>
      <div class="post-request post-request__interface_text">本文を入力</div>
      <%= f.text_area :text,
        class: "post-request__interface post-request__interface_input-text" %>

     <%= f.submit "リクエスト",
        class: "post-request__interface post-request__interface_submit post-request__interface_submit_bottom"%>
    <% end %>
  </body>
</html>
